function keepscore(scoreform)
{
          if(eval(scoreform.scorebox.value) <= 80){var score=0; 

var scortotal=scoreform.scorebox.value;scortotal=eval(scortotal)+10; scoreform.scorebox.value=scortotal;} 

else {
            window.alert("You Win! You got 100 Points! Ding Ding Ding Ding!"); scoreform.scorebox.value=100}
}


function drive11(form)
{
var descramble11="INDIA";namesubmit11="";namesubmit11=form.mysubmit11.value;if (descramble11 == namesubmit11){
keepscore(form); window.alert("Yippy! You are correct! You get 10 Points!")
}
else{window.alert("Nope. Try again.")}
}


